<section>
  {{#if userDetails}}
  <h3 style="margin-left: 7%;" class="greeting">Hello {{userDetails.user.name}} <img src="https://cdn0.iconfinder.com/data/icons/remoji-soft-1/512/emoji-wink-hello-smile-happy.png" alt="" width="40px"></h3>
  {{/if}}
  <div class="album py-5 bg-body-emphasis">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 row-cols-xxl-6 g-3">
        {{#each products}}
        <div class="product-grid">
          <div class="product-container">
            <div class="product-image-container">
              <img class="product-image" src="{{this.image}}" alt="{{this.name}}" title="{{this.name}}">
            </div>

            <div class="product-name limit-text-to-2-lines">
              {{this.name}}
            </div>

            <div class="product-rating-container">
              <img class="product-rating-stars" src="images/products/ratings/rating-{{this.rating.stars}}.png" alt="{{this.rating.stars}}">
              <div class="product-rating-count link-primary">
                {{this.rating.count}}
              </div>
            </div>

            <div class="product-price">
              â‚¹ {{this.priceCents}}
            </div>

            {{!-- <div class="product-quantity-container">
              <select>
                <option selected="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
              </select>
            </div> --}}

            <div class="product-spacer"></div>


            <a style="text-decoration: none; color: black; font-weight: 500;" href="/add-to-cart/{{this._id}}/"><button
                class="add-to-cart-button button-primary js-add-to-cart " data-product-id="${product.id}"
                onclick="addToCartBtn(this)">Add to Cart</button></a>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</section>

<script>
  function addToCartBtn(button) {
    // Disable the button to prevent multiple clicks
    button.disabled = true;
    // Change the button text to 'Item added'
    button.textContent = 'Item added';
    //Change the button text to 'Add to cart' after 2 seconds
    setTimeout(() => {
      button.textContent = 'Add to cart';
    }, 2000);
  }
</script>